{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Mrya",
  "scopeName": "source.mrya",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#constants" },
    { "include": "#builtins" },
    { "include": "#functions" },
    { "include": "#modules" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.mrya",
          "match": "//.*$"
        },
        {
          "name": "comment.block.mrya",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            {
              "match": ".",
              "name": "comment.block.mrya"
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.mrya",
          "match": "\\b(if|else|while|for|break|continue|return|func|define|class|inherit|this|as|try|catch|end|raise|let|const)\\b"
        },
        {
          "name": "keyword.operator.decorator.mrya",
          "match": "%"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.mrya",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        { "name": "constant.character.escape.mrya", "match": "\\\\." }
      ]
    },
    "numbers": {
      "patterns": [
        { "name": "constant.numeric.mrya", "match": "\\b[0-9]+(\\.[0-9]+)?\\b" }
      ]
    },
    "constants": {
      "patterns": [
        { "name": "constant.language.boolean.mrya", "match": "\\b(true|false|nil)\\b" }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.mrya",
          "match": "\\b(output|import|request|to_int|to_float|to_bool|fetch|store|append_to|append|length|get|set|list_slice|map_has|map_keys|map_values|map_delete|map_get|map_set|abs|round|up|down|root|random|randint|raise|assert)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        { "name": "entity.name.function.mrya", "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()" }
      ]
    },
   "modules": {
      "patterns": [
        {
          "name": "support.module.mrya",
          "match": "\\b(fs|time|math|string|window|gui)\\b"
        }
      ]
    }
  }
}
